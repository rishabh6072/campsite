<% include ./partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center"><i class="fa fa-sign-in" aria-hidden="true"></i> Login</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/login" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="username" placeholder="Username">
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" placeholder="Password">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" id="login">Login!</button>
                </div>
            </form>
			<div class="orSeperator"><span> OR </span></div>
			<a href="/auth/facebook" class="btn btn-lg btn-primary btn-block btn-facebook"><span class="fa fa-facebook"></span> Facebook</a>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
<% include ./partials/footer %>

